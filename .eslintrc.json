{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true
    },
    "plugins": ["wdio"],
    "extends": [
        "eslint:recommended", 
        "airbnb-base", 
        "plugin:wdio/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions":  [
            "error",
            "ignorePackages",
            {
              "js": "always"
            }
         ]
    }
}